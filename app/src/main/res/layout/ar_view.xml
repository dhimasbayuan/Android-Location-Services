<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/marker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/mainMarker"
        android:orientation="vertical"
        android:padding="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ar_pin"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
            <TextView
                android:id="@+id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FontPath.Bold"
                android:textSize="10sp"
                android:textColor="#fff"
                android:background="@drawable/bg_gradient_ar"/>
            <TextView
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="8sp"
                android:background="@drawable/bg_gradient_ar"
                android:text=""/>
        </LinearLayout>


    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="6dp"
        android:layout_below="@+id/mainMarker"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/info_window_arrow_down" />
</RelativeLayout>